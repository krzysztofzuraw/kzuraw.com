---
import Meta from "@/components/meta.astro";
import Layout from "@/layouts/layout.astro";
---

<Layout>
  <Meta
    title={"404 - Page Not Found"}
    description={"The page you're looking for doesn't exist"}
    slot="meta"
  />
  <div
    class="flex flex-col items-center justify-center min-h-[50vh] text-center"
  >
    <h1 class="text-4xl font-bold mb-4">404</h1>
    <p class="text-xl mb-8">Oops! The page you're looking for doesn't exist.</p>
    <a
      href="/"
      class="px-4 py-2 bg-black text-white rounded-md hover:bg-gray-800 transition-colors"
    >
      Go back home
    </a>
  </div>
</Layout>
